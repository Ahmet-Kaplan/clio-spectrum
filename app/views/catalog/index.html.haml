- active_source = params['active_source'] == 'New Arrivals' && params['f'] && params['f'].has_key?('acq_date_facet') ? 'New Arrivals' : 'Catalog'

- add_datasources(active_source)

- sidebar_items << capture do 
  = render :partial=>'facets' 

-  unless has_search_parameters? 
  = datasource_landing_page(active_source)

- else

  - @page_title = application_name + " Search Results" 

  - extra_head_content << render_opensearch_response_metadata.html_safe 


  = render :partial => 'did_you_mean' 

  = render 'constraints', :localized_params=>params 
  
  .pageEntriesInfo
    = render "change_view" 
    = render_pagination_info @response, :entry_name=>'item' 
    = link_to(image_tag("rss-feed-icon-14x14.png"), catalog_index_path(params.merge(:format => "atom")).gsub('[','%5B').gsub(']','%5D'),:id => "feedLink") 
    = link_to "start over", catalog_index_path, :id=>"startOverLink" 
  
  = render 'sort_and_per_page' 
  .pagination_container
    = render 'results_pagination' 

  = render :partial => 'document_list' 


  .pagination_container
    = render 'results_pagination' 



