
%nav.index_toolbar.navbar.navbar-default

  .collapse.navbar-collapse

    %ul.nav.navbar-nav
      %li.active
        %div.navbar-text
          -# - raise

          -# = fix_catalog_links(render "catalog/paginate_compact", :object => @response )
          -# BLACKLIGHT 5
          = render :partial => "paginate_compact", :object => @response

          = fix_catalog_links(link_to image_tag('rss-feed-icon-14x14.png', :size => "13x13"), catalog_index_path(params.merge(:format => 'atom')), :class => "rss-feed")

    %ul.nav.navbar-nav.navbar-right
      %li
        = fix_catalog_links(render 'per_page_widget')
        = fix_catalog_links(render 'sort_widget')
  
