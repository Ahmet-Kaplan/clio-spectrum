
-# NEXT-485 - RSS feeds from CLIO Beta don't display item content
-# 
-# Here is the proposed content:
-# 
-# Title & subtitle:
-# Author:
-# Publication year:
-# Location(s)
-# Call number:
-# Online link:


%dl
  = add_row('Title', document.get("title_display"), :style => :dlist)
  = add_row('Author', document.get("author_display"), :style => :dlist)
  = add_row('Published', document.get("full_publisher_display"), :style => :dlist)
  - unless (locations = document["location_call_number_id_display"].listify.reject { |l| l.match(/^Online/) }).empty?
    = add_row("Location", format_location_results(locations, document), :style => :dlist)
  = add_row('Online', format_online_results(online_link_hash(document)), :style => :dlist)

