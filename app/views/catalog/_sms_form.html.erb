<% carriers = 
{
'Please select your carrier' => '',
'AT&T' => 'att',
'Verizon' => 'verizon',
'T Mobile' => 'tmobile',
'Sprint' => 'sprint',
'Nextel' => 'nextel',
'Virgin Mobile' => 'vmobile',
'Alltel' => 'alltel',
'Cricket' => 'cricket'
}
%>
<h1>SMS This</h1>
<% form_tag({:controller => "catalog", :action => "sms"}, :method => :post, :id => "email_form") do %>
  <%= label_tag(:to, "Phone Number:") %><br/>
  <%= text_field_tag :to %><br/>
  <%= label_tag(:carrier, "Carrier:") %><br/>
  <%= select_tag(:carrier, options_for_select(carriers, '')) %><br/>
  <% @documents.each do |doc| %>
     <%=hidden_field_tag "id[]", doc.get(:id)%>
  <% end %>
  <%= submit_tag "Send" %>
<% end %>
