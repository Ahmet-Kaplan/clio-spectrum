-# music (scores)

- marc = document.to_marc

.main
  .show_title
    = content_tag(:h1, document_heading.listify.join(""))
    .show_cover.book_cover
      .gbs_cover
        .gbs_thumbnail
          = image_tag("spacer.png", :class => "bookjacket " + document["isbn_t"].listify.collect { |x| "isbn_" + x.to_s}.join(" "))
        .gbs_preview= link_to image_tag("gb_preview.png"), "http://books.google.com", :class => "gbs_preview_link"
    .values
      = add_row("Composer", generate_value_links_2(get_author(marc), :author))
      = add_row("Uniform Title", get_title_uniform(marc))
      = add_row("Title", get_marc_values(marc, "245", "abcfghknps"))
      = add_row("Other Titles", get_title_other(marc))
      = add_row("Format", document["format"])
      = add_row("Language", document["language_facet"])
      = add_row("Edition", get_marc_values(marc, "250", "ab"))
      = add_row("Published", get_publisher(marc))
      = add_row("Description", get_description(marc))
      = add_row("Series", get_series(marc))
      = add_row("Performers", get_marc_values(marc, "511", "a", options = {:indicators => ["0", :all]}))
      = add_row("Notes", get_notes(marc))
      = add_row("Subjects", generate_value_links(get_subject_LC(marc), :subject))
      = add_row("Also Listed Under", generate_value_links_2(get_author_other(marc), :author))
      = add_row("Contents", get_marc_values(marc, "505", "agrtu"))
      = add_row("Publisher No.", get_marc_values(marc, "028", "ab"))
      = add_row("ISN", get_ISN(marc))


    
  = render :partial => "_formats/clio/catalog_show_holdings", :locals => {:document => document }

.sidebar
  = render :partial => "_formats/clio/catalog_show_sidebar", :locals => {:document => document }
