.result{:class => alternating_line('article')}
  .row
    .result_title= link_to document.title.html_safe, article_show_path(:openurl => document.src['openUrl'])
  = add_row('Author', document.src['Author'])
  = add_row('Type', document.content_type)
  = add_row('Availability', document.fulltext ? "Full Text Available" : "")
  = add_row('Abstract', document.abstract, :abbreviate => 100, :style => :blockquote)

