.result{:class => alternating_line('article')}
  .row
    .result_title= link_to_article document
  = add_row('Author', document.src['Author'])
  = add_row('Citation', get_article_citation(document))
  = add_row('Type', document.content_type)
  = add_row('Availability', document.fulltext ? "Full Text Available" : nil)

