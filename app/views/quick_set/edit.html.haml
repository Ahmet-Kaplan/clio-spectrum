

- content_for(:head) { stylesheet_link_tag "select-multiple" }
- content_for(:jstemplates) { javascript_include_tag 'jquery.quicksearch' }
- content_for(:jstemplates) { javascript_include_tag 'jquery.select-multiple' }
- content_for(:jstemplates) { javascript_include_tag 'quicksets' }

-# used in the layout, for html page header and H2 text
- @page_title = "Quick Set Management - #{@quickset.name}"

= form_for @quickset do |f|

  .row
    .col-xs-6
      .form-group
        %label{for: :name}Name
        %br
        = f.text_field :name, size: '20'
      .form-group
        %label{for: :suppressed}Suppressed
        %br
        = f.radio_button(:suppressed, true)
        = label(:suppressed_true, "Yes")
        = f.radio_button(:suppressed, false)
        = label(:suppressed_false, "No")
    .col-xs-6
      .xform-group
        %label{for: :description}Description
        %br
        = f.text_area :description, {rows: '2', size: '30'}
      = f.submit("Update QuickSet", class: 'btn btn-primary')
      = f.submit("Cancel", class: 'btn btn-danger', onclick: 'history.go(-1);return true;')


  %label{for: :quick_set_content_provider_ids}Content Providers
  = f.select :content_provider_ids, ContentProvider.all.collect {|x| [x.name, x.id]}, {}, multiple: 'multiple', size: 5
      
