.results_header
  .category_title
    #{title}
    - if defined?(description)
      %a.source-info.btn.btn-link{:href => '#', :rel => 'popover', :'data-placement' => 'bottom', :'data-content' => description}
        = image_tag('information_icon.png', :size => "20x20")
  - if result && result.total_items.to_i > 0
    .result_count
      -# NEXT-1027 - Relabel 'All #### results' on Quicksearch
      - label = title.eql?("Libraries Website") ? 'View' : 'View and filter'
      %strong= link_to "#{label} all <span class='visible-desktop'>#{number_with_delimiter(result.total_items)}</span> results".html_safe, result.search_path
