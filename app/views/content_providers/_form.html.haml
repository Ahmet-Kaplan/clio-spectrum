= form_for @content_provider do |f|
  - if @content_provider.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_provider.errors.count, "error")} prohibited this content_provider from being saved:"
      %ul
        - @content_provider.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
