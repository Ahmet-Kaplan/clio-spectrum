
-# used in the layout, for html page header and H2 text
- @page_title = "EDS Content Providers"


%table.table

  - @content_providers.each do |content_provider|
    %tr
      %td= content_provider.id
      %td= content_provider.active
      %td= content_provider.last_seen
      %td= content_provider.eds_database_id
      %td= content_provider.name
      - if can? :manage, content_provider
        %td= link_to 'Show', content_provider
        %td= link_to 'Edit', edit_content_provider_path(content_provider)
        %td= link_to 'Destroy', content_provider, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

- if can? :manage, ContentProvider
  = link_to 'New Content provider', new_content_provider_path
