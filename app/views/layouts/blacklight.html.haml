!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    = render :partial => "/layouts/common_head"
  - onload = (params[:q].to_s.empty? and params[:f].to_s.empty? and params[:id].nil?) ? "$('input#q').focus();" : ""
  %body{:onload => onload}
    #trigger
    #doc4.yui-t2
      #hd
        .yui-g
          .yui-u.first
            %h1.site_title
              = link_to application_name, "/"

              = (params[:controller] == "catalog" and !params[:id]) ? "<span id='results_text'>Search Results</span>".html_safe : ""
          .yui-u.user_util_links
            = render :partial => "/user_util_links"
      #bd
        #yui-main
          .yui-b
            = render :partial=>'/flash_msg'
            = yield
        .yui-b.sidebar= sidebar_items.join('').html_safe
        
      #ft
        = @footer
        #footnotes_holder
    = render :partial => "/feedback_form"
