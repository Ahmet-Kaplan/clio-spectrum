- result[:docs] = result[:docs][0,count] if defined?(count)
= render :partial => "/catalog/fedora_resources_check", :locals => {:documents => result[:docs] }
.results
  .results_header
    .category_title Academic Commons
    .description
      Digital Repository of Research
    - unless result[:error]
      .search
        - if result[:count] == 0
          No results found.
        - else
          #{number_with_delimiter(result[:count])} results 
          = link_to "(explore results)", result[:url]
    - else
      Error when searching. #{result[:message]}
  - unless result[:error]
    - result[:docs].each_with_index do |document, document_counter|
      = render_document_view(document, :template => "aggregate", :format => "ac",:document_counter => document_counter)

