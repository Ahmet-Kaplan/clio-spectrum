= form_for @admin_database_alert do |f|
  -if @admin_database_alert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_database_alert.errors.count, "error")} prohibited this admin_database_alert from being saved:"
      %ul
        - @admin_database_alert.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :clio_id
    = f.number_field :clio_id
  .field
    = f.label :author_id
    = f.number_field :author_id
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :message
    = f.text_area :message
  .actions
    = f.submit 'Save'
