                          %li
                            %a{:href => "http://library.columbia.edu/services/askalibrarian.html"} Ask a Librarian
                          %li
                            %a{href: '#', class: 'feedback-popup'} Suggestions & Feedback

                    %ul.nav.pull-right
                      - if current_user
                        %li.dropdown.menu
                          %a.dropdown-toggle.menu{"data-toggle" => "dropdown", :href => "#"}
                            %span.visible-phone
                              #{current_user.login}
                              %b.caret
                            %span.hidden-phone
                              #{current_user.name} (#{current_user.login})
                              %b.caret
                          %ul.dropdown-menu.menu-dropdown
                            %li= link_to "Library Account", "http://www.columbia.edu/cgi-bin/cul/resolve?lweb0087-1", :target => "_blank"
