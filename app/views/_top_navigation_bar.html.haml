                        %ul.dropdown-menu.menu-dropdown
                          %li
                            %a{:href => "http://columbia.edu"} Columbia University - Home
                          %li
                            %a{:href => "http://library.columbia.edu"} Libraries - Home
                          %li.divider
                          %li
                            %a{:href => "http://clio.cul.columbia.edu:7018/vwebv/searchBasic?sk=CLIO"} CLIO Legacy
