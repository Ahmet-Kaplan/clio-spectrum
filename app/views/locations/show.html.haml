- content_for :map do
  = javascript_include_tag "google_map"
.container.location_popup{:style => 'background-color: #f6f6ff'}
  - if @location
    .well
      %h1= @library ? @library.name : @location.name

      - if @location_notes && @location_notes.length > 0
        .well.well-sm.location_notes= @location_notes

      .row
        .col-md-9
          %h4
            .found_in= @location.found_in.gsub(/\n+/, '<br>').html_safe
    .row
      .col-md-9
        .gmap_container#map{style:'height: 600px; margin: 1em;', data: {markers: @markers}}
      -#    = content_tag "div", id: "map", data: {markers: @markers}, style:'height: 400px\; margin: 1em\;'

      .col-md-3
        .links
          %p
          - @links.each do |link|
            %p
              = link_to link.name, link.value

        - if @library
          .row
            %h4
              .section_header
                Hours
                .hours_link
                  (
                  = link_to "Full Hours Info", "http://www.columbia.edu/cu/lweb/services/hours/index.html?library=#{h(@library.hours_db_code)}"
                  )
            - @hours.each do |hour|
              - today_class = hour.date == Date.today ? "list-group-item active" : "list-group-item"
              .list_group
                .list-group-item{:class => today_class }
                  .row
                    .col-md-4= hour.to_day_of_week
                    .col-md-8= hour.to_opens_closes
                    .hours_note= hour.note.to_s

  - else
    %h2 No location information for #{h(params[:id])}

